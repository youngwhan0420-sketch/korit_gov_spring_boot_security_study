<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com_korit.security_study.mapper.VerifyMapper">

    <resultMap id="VerifyResultMap" type="com_korit.security_study.entity.Verify">
        <id property="userId" column="user_id"/>
        <result property="verifyCode" column="verify_code"/>
    </resultMap>

    <insert id="addVerifyCode">
        insert into
        verify_tb
        values
        (#{userId}, #{verifyCode});
    </insert>

    <select id="getVerifyCode" resultMap="VerifyResultMap">
        select
        *
        from
        verify_tb
        where
        user_id = #{userId};
    </select>

    <delete id="deleteVerifyCode">
        delete from
        verify_tb
        where
        user_id = #{userId}
    </delete>

</mapper>